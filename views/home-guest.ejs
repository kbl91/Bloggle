<%- include('includes/header') %>

    <div class="container py-md-5">

        <% errors.forEach(function(message) { %>
            <div class="alert alert-danger text-center nes-textarea is-error">
                <%= message %>
            </div>
            <% }) %>
                <div class="row align-items-center">
                    <div class="col-lg-7 py-3 py-md-5">
                        <h1 class="display-3">Remember Writing?</h1>
                        <p class="lead text-muted">Are you weary of the dreary and stale &ldquo;shared&rdquo;
                            posts that reek of ancient email forwards from the
                            90&rsquo;s? Fear not, for we have unlocked the secret to restoring the joys of the internet!
                            It's as simple as putting finger to keyboard and actually writing something, rather than
                            mindlessly clicking that &ldquo;share&rdquo; button. How revolutionary!
                        </p>
                        <!-- Images and smll descriptions of what the website allows you to do -->
                    </div>
                    <!-- Registration Form -->
                    <div class="col-lg-5 pl-lg-5 pb-3 py-lg-5">

                        <h3>Sign up today!</h3>
                        <p><small>Psst... it's free</small></p>
                        <form action="/register" method="POST" id="registration-form">

                            <% regErrors.forEach(function(message) { %>
                                <div class="alert alert-danger small nes-textarea is-error">
                                    <%= message %>
                                </div>
                                <% }) %>

                                    <div class="form-group">
                                        <label for="username-register"
                                            class="text-muted mb-1"><small>Username</small></label>
                                        <input name="username" id="username-register" title="Nothing cringe please"class="form-control nes-input"
                                            type="text" placeholder="Pick a username" autocomplete="off">
                                    </div>

                                    <div class="form-group">
                                        <label for="email-register" class="text-muted mb-1"><small>Email</small></label>
                                        <input name="email" id="email-register" title="We promise not to annoy you" class="form-control nes-input"
                                            type="text" placeholder="you@example.com" autocomplete="off">
                                    </div>

                                    <div class="form-group">
                                        <label for="password-register"
                                            class="text-muted mb-1"><small>Password</small></label>
                                        <input name="password" id="password-register" title="Make it as unique as you" class="form-control nes-input"
                                            type="password" placeholder="Create a password">
                                    </div>

                                    <!-- FUTURE ME LOOK HERE: add 'file upload' input here for user profile pic during user registration. 4/27 I cant get it to work how i want to so i need a break from this -->
                                    <!-- <form action="/profile" method="post" enctype="multipart/form-data">
                                        <label for="profilepicture-register"
                                            class="text-muted mb-1"><small>Upload Profile Picture</small></label>
                                        <input type="file" name="avatar" />
                                      </form> -->

                                    <button type="submit"
                                        class="py-3 mt-4 btn btn-lg btn-success btn-block nes-btn is-success"
                                        id="signup">Register
                                    </button>

                        </form>
                    </div>
                </div>
    </div>

<%- include('includes/footer') %>